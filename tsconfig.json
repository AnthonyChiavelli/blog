{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "rootDir": "/",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "lib": [
      "es5",
      "es6",
      "dom"
   ],
  //  "moduleResolution": "node",
   "emitDecoratorMetadata": true,
   "experimentalDecorators": true,
   "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
